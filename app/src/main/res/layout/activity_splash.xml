<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTextColor"
    android:orientation="vertical"
    tools:context="com.spectrics.erpproject.SplashActivity">

    <!--on below line we are adding an image view-->
    <TextView
        android:id="@+id/sptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPECTRICS SOLUTIONS"
        android:layout_below="@+id/idIVLogo"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!--on below line we are creating progress bar-->
    <ImageView
        android:id="@+id/idIVLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="170dp"
        android:contentDescription="Spectrics soulutions"
        android:src="@drawable/logo" />

    <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sptext"
        android:layout_centerInParent="true"
        android:indeterminateTint="#0F0722" />

</RelativeLayout>
